# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Test for getting stuff from the database
GET     /test                       controllers.TestController.test

#Use the according to form: http://localhost:9000/radio?file=Radio&source=Soundtest
GET     /radio                       controllers.DatabaseController.getRadio(file:String, source:String)

#Test new user
GET   /addUsers                      controllers.UserController.addUsers

GET    /getUsers                     controllers.UserController.getUsers

# Lets you add user via URL, for example:
#localhost:9000/signUp?email="andre@hej.com"&password="hidden"&name="Andree"
GET    /signUp                       controllers.UserController.signUp(email:String, password:String, name:String)

#POST   /                             controllers.UserController.signUp(email:String, password:String, name:String)


